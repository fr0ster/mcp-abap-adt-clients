  test_cases:
    - name: "test_domain"
      enabled: true
      description: "Lock user-defined domain"
      params:
        domain_name: "<YOUR_TEST_DOMAIN_NAME>"  # ⚠️ UPDATE: Must be user-defined (Z_ or Y_ prefix)
        # package_name: if not specified, uses environment.default_package
        # transport_request: if not specified, uses environment.default_transport

# Unlock Domain
unlock_domain:
  test_cases:
    - name: "test_domain"
      enabled: true
      description: "Unlock user-defined domain"
      params:
        domain_name: "<YOUR_TEST_DOMAIN_NAME>"  # ⚠️ UPDATE: Must be user-defined (Z_ or Y_ prefix)
        # package_name: if not specified, uses environment.default_package
        # transport_request: if not specified, uses environment.default_transport

# Update Domain
update_domain:
  test_cases:
    - name: "test_domain"
      enabled: true
      description: "Update user-defined domain"
      params:
        domain_name: "<YOUR_TEST_DOMAIN_NAME>"  # ⚠️ UPDATE: Must be user-defined (Z_ or Y_ prefix)
        # package_name: if not specified, uses environment.default_package
        # transport_request: if not specified, uses environment.default_transport
